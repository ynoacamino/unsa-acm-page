---
import {CalendarIcon} from '@radix-ui/react-icons'
const IMG_URL = 'https://res.cloudinary.com/dazt6g3o1/image/upload/v1708744991/n4lc1zkyxzzef01fhvtq.png'
---

<div class="w-full grid grid-cols-1 lg:grid-cols-2 text-primary my-40 gap-y-10 gap-x-4 px-6 items-center">
  <div class="w-full flex flex-col gap-6 items-center lg:items-start">
    <header class="flex flex-col gap-2">
      <h1 class="font-bold text-6xl text-center lg:text-start text-primary-title">Upcoming Events</h1>
      <h2 class="text-xl text-center lg:text-start">Stay tuner for events coming soon</h2>
    </header>
    <main class="pl-4 flex gap-5 flex-col">
      {
        Array.from({length: 3}).map((_, i) => (
        <div class="flex items-center gap-4">
          <CalendarIcon className='w-9 h-9'/>
          <div class="">
            <h3 class="text-2xl font-bold text-primary-title">Event Name</h3>
            <h4 class="text-xl">Event 1 description</h4>
          </div>
        </div>
        ))
      }
    </main>
  </div>
  <div class="w-full flex items-center justify-center lg:justify-end">
    <img
    src={IMG_URL}
    alt="image"
    class="w-full rounded-md aspect-video max-w-lg"
    />
  </div>
</div>